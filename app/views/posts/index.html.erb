<h3>ユーザー情報一覧</h3>

 <% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
 <thead>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>終日</th>
    <th>スケジュール更新日時</th>
    <th>確認</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
 </thead>

 <tbody>
 <% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= post.title %></td>
    <td><%= post.start_day.to_s(:datetime_jp) %></td>
    <td><%= post.end_day.to_s(:datetime_jp)%></td>
    <td><% if post.all_day == "1" %>
         ○
        <% else %>
        
        <% end %></td>
    <td><%= post.updated_at.to_s(:datetime_jp) %></td>
    <td><%= link_to "確認", post %>
    <td><%= link_to "編集", [:edit, post] %></td>
    <td><%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
  </tr>
  <% end %>
 </tbody>
</table>
    
 <p><%= link_to "ユーザー新規登録", :new_post %></p>
 
<% content_for :sum do %>スケジュール合計：<%= @post_count %>
<% end %>
